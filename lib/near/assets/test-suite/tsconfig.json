{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2020"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist", "dist-package"]
}
