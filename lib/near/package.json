{
  "name": "aws-near-localnet-node-runner",
  "version": "0.1.0",
  "description": "NEAR localnet node deployment via AWS CDK",
  "scripts": {
    "build": "npx tsc && cd assets/test-suite && bash build.sh",
    "watch": "npx tsc -w",
    "test": "npx jest --detectOpenHandles",
    "cdk": "npx cdk",
    "synth": "npx cdk synth",
    "deploy": "npx cdk deploy --all",
    "deploy:core": "npx cdk deploy near-common near-infrastructure near-install near-sync",
    "destroy": "npx cdk destroy --all",
    "export-config": "npm run build && node dist/scripts/export-config.js",
    "trigger-tests": "node -r ts-node/register scripts/trigger-tests.ts",
    "deploy-test-only": "npm run build && npx cdk deploy near-test",
    "fetch-validator-keys": "node -r ts-node/register scripts/fetch-validator-keys.ts"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.140.0",
    "cdk-nag": "^2.27.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}

